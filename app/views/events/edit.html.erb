<%if current_member.access_level=="AD" || current_member.access_level=="TC"%>
<h1>Edit Event</h1>

<%= form_for @event do |f|%>

  <div class="form-row">

    <div class="form-group col-sm-9">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, autocomplete: 'title', class: 'form-control' %>
    </div>

  </div>

  <div class="form-row">

    <div class="form-group col-sm-3">
      <%= f.label :time %>
      <%= f.datetime_local_field :time, autofocus: true, autocomplete: 'time', class: 'form-control' %>
    </div>

  </div>

  <div class="row">
    <div class="form-group col-sm-9">
      <%= f.label :address %>
      <%= f.text_field :address, autofocus: true, autocomplete: 'address', class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-sm-9">
      <%= f.label :meeting_point %>
      <%= f.text_field :meeting_point, autofocus: true, autocomplete: 'meeting_point', class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-sm-9">
      <%= f.label :description %>
      <%= f.text_area :description, autofocus: true, autocomplete: 'description', class: 'form-control', size: "24x6" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>


  <div class="form-group">
    <%= link_to "Cancel and go back", events_path, class: "text-decoration-none" %>
  </div>

<% end %>
<%else%>
<%= render 'layouts/access_denied'%>

<%end%>