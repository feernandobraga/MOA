<%if current_member.access_level=="AD"%>
<h1>Add News</h1>

<%= form_for @entry do |f|%>

  <div class="form-row">

    <div class="form-group col-sm-9">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, autocomplete: 'title', class: 'form-control' %>
    </div>

  </div>


  <div class="form-row">
    <div class="form-group col-sm-9">
      <%= f.label :description %>
      <%= f.text_area :description, autofocus: true, autocomplete: 'description', class: 'form-control', size: "24x6" %>
    </div>
  </div>


    <div class="form-group">
      <%= f.submit class: 'btn btn-success' %>
    </div>


  <div class="form-group">
    <%= link_to "Cancel and go back", root_path, class: "text-decoration-none" %>
  </div>

<% end %>
<%else%>
<%= render 'layouts/access_denied'%>

<%end%>